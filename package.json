{
  "name": "@codbex/harmonia",
  "version": "0.3.0",
  "description": "Harmonia UI",
  "repository": {
    "url": "https://github.com/codbex/codbex-harmonia.git",
    "type": "git"
  },
  "type": "module",
  "main": "dist/harmonia.min.js",
  "module": "dist/harmonia.esm.js",
  "keywords": [],
  "author": "StanGenchev",
  "license": "MIT",
  "contributors": [
    {
      "name": "Stan Genchev",
      "email": "stan.genchev@codbex.com",
      "url": "https://github.com/StanZGenchev"
    }
  ],
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "node scripts/build.cjs && npm run tailwind && node ./scripts/docs.cjs",
    "build:prod": "node scripts/build.cjs && npm run tailwind",
    "tailwind": "npx @tailwindcss/cli -m -i src/styles/globals.css -o dist/harmonia.css",
    "tailwind:watch": "npx @tailwindcss/cli -m -i src/styles/globals.css -o dist/harmonia.css -w",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md,html,yaml}\" --config ./.prettierrc",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md,html,yaml}\" --config ./.prettierrc",
    "docs:install": "npm install alpinejs@3.15.1 lucide@0.553.0 --prefix ./docs/public",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@fontsource/open-sans": "^5.2.7",
    "@tailwindcss/cli": "^4.1.13",
    "alpinejs": "^3.15.1",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.9",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "vitepress": "^2.0.0-alpha.12"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "lucide": "^0.544.0",
    "nouislider": "^15.8.1",
    "uuid": "^13.0.0"
  }
}
